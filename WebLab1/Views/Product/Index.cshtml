@using WebLab.Models;
@model ListViewModel<Food>


@{
    ViewData["Title"] = "Каталог";

    var categories = ViewData["Groups"] as IEnumerable<FoodGroup>;
    int currentGroup = (int)ViewData["CurrentGroup"];
    var text = currentGroup !=0 ? categories.FirstOrDefault(g => g.FoodGroupId == currentGroup)?.GroupName : "Все";
 } 

<div class="row">
    <div class="col-2">
        <div class="dropdown mt-2">
            <a class="btn btn-secondary dropdown-toggle"
               asp-action="Index" asp-controller="Product"
               role="button"
               id="dropdownMenuLink"
               data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                @text
            </a>
            <div class="dropdown-menu"
                 aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item"
                   asp-action="Index"
                   asp-controller="Product">Все</a>
                @foreach (var item in categories)
                {
                    <a class="dropdown-item"
                       asp-action="Index"
                       asp-controller="Product"
                       asp-route-group="@item.FoodGroupId"
                       asp-route-pageNo="1">@item.GroupName</a>
                }
            </div>
        </div>
    </div>
    <div class="card-group" id="list">
        <partial name="_ListPartial" model="@Model" />
    </div>
    
    <pager page-current="@Model.CurrentPage"
           page-total="@Model.TotalPages"
           action="Index"
           controller="Product"
           group-id="@currentGroup"></pager>
</div>       
    
   

   




















